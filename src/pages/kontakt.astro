---
import BaseLayout from "../layouts/BaseLayout.astro";
import TopSection from "../components/TopSection.astro";
import BtnMakro from "../components/BtnMakro.astro";
const { title, text, makrocontent, makrohref } = Astro.props;
const { image1, image2, alt1, alt2 } = Astro.props;
---

<BaseLayout>
  <TopSection
    title="kontakt os"
    text="har du nogen spørgsmål er du velkommen til at kontakte os på vores mail sorteoeje@gmail.com du er også altid velkommen til at tale med os i kaffebaren om stort og småt"
  >
    <img
      src="/images/staystrong.webp"
      alt="staystrong"
      class="w-full h-full object-cover"
    />

    <!-- Overskriver standard-knappen med to knapper i "buttons"-slottet -->
    <BtnMakro
      slot="buttons"
      makrocontent="send os en mail"
      makrohref="mailto:sorteoeje@gmail.com"
    />
    <BtnMakro slot="buttons" makrocontent="events" makrohref="/events" />
  </TopSection>
</BaseLayout>
