---
const { title, text, makrocontent, makrohref } = Astro.props;
import BtnMakro from "./BtnMakro.astro";
---

<section class="py-8">
  <div class="flex flex-wrap sm:flex-nowrap">
    <!-- Tekst-sektion -->
    <div
      class="flex flex-col justify-end basis-full sm:basis-1/3 w-full px-4 order-1 sm:order-2"
    >
      <h2 class="text-lg sm:text-2xl mb-4">{title}</h2>
      <div class="text-sm sm:text-base pb-5">{text}</div>
      <!-- Navngivet slot til knapper -->
      <slot name="buttons">
        <!-- Standardfallback-knap hvis ingen knapper leveres fra "knap-slot" -->
        <BtnMakro makrocontent={makrocontent} makrohref={makrohref} />
      </slot>
    </div>
    <!-- Billedet -->
    <div
      class="basis-full sm:basis-2/3 w-full aspect-[16/10] order-2 sm:order-1 pt-4 sm:pt-0"
    >
      <slot class="w-full h-full object-cover block" />
    </div>
  </div>
</section>
